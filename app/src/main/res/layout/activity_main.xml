<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#FFCCCC">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts App"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="34sp"/>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click On the Logos below for doing specific Tasks (call,go to website or get address in maps) :"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="40sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"


        />


    <ImageView
        android:id="@+id/ivmood"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:layout_marginTop="5sp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_sentiment_satisfied_black_24dp" />

    <ImageView
        android:id="@+id/ivPhone"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="10sp"
        android:clickable="true"
        app:srcCompat="@drawable/phone" />

    <ImageView
        android:id="@+id/ivWeb"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_marginTop="5sp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_web_black_24dp" />

    <ImageView
        android:id="@+id/ivLocation"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_marginTop="5sp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_location_on_black_24dp" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Contact"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>



</LinearLayout>


